
<% if user_signed_in?%>
<div id="friends">
  <br/>
  <table class="table table-hover">
    <thead class='table-dark'>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user_id == current_user.id %>
          <tr>
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.twitter %></td>
              <td><%= link_to "Delete", friend, class:'btn btn-sm btn-outline-danger', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:'btn btn-secondary' %>

<% else %>
  <h1>Hello world!</h1>

<% end %>

